{
  "manifest_version": 3,
  "name": "Streamer Feedback by @emntco",
  "version": "0.3",
  "description": "Leave feedback for Twitch streamers!",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://sf.emnt.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.ico",
      "48": "images/icon48.ico",
      "128": "images/icon128.ico"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.ico",
    "48": "images/icon48.ico",
    "128": "images/icon128.ico"
  }
}